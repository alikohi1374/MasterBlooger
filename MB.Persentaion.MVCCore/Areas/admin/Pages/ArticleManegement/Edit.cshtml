@page "{id:long}"
@model MB.Persentaion.MVCCore.Areas.admin.Pages.ArticleManegement.EditModel
@{
}
}
<style type="text/css">.control-label { }</style>


<div class="card">
    <div class="card-header">
        <h2>Edit Articles: @Model.Article.Title</h2>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Article.Id" />
                    <div class="col-md-6 col-sm-12">
                        <div class="form-group">
                            <label asp-for="Article.Title " class="control-label">Title:</label>
                            <input asp-for="Article.Title" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <div class="form-group">
                            <label asp-for="Article.ShortDescription " class="control-label">Title:</label>
                            <input asp-for="Article.ShortDescription" class="form-control"  rows="3"/>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <div class="form-group">
                            <label asp-for="Article.Content " class="control-label">Title:</label>
                            <input asp-for="Article.Content" class="form-control"  rows="5"/>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <div class="form-group">
                            <label asp-for="Article.Image" class="control-label">Title:</label>
                            <input asp-for="Article.Image" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <div class="form-group">
                            <label asp-for="Article.ArticleCategoryId " class="control-label">Title:</label>
                            <select asp-for="Article.ArticleCategoryId" asp-items="Model.ArticleCategory" class="form-control">
                                <option value="0">انخاب کنبد</option>
                            </select>
                            
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Edit" class="btn btn-warning" />
                        <a class="btn btn-dark" asp-page="./List" asp-area="admin">Back to list</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>