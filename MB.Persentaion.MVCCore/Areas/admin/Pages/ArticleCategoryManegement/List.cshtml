@page
@model MB.Persentaion.MVCCore.Areas.admin.Pages.ArticleCategoryManegement.ListModel
@{
}
<div class="card">
    <div class="card-header">
        <h3 class="float-left">Article Category List</h3>
        <div class="float-right">
            <a class="btn btn-success" asp-page="./Create" asp-area="admin">Add New</a>
        </div>
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Status</th>
                    <th>CreationDate</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var articlecategory in Model.ArcileCategories)
                {
                    <tr>
                        <td>@articlecategory.Id</td>
                        <td>@articlecategory.Title</td>
                        <td>
                            @if (articlecategory.IsDeleted)
                            {
                                <i class="fa fa-close fa-2x text-danger"></i>
                            }
                            else
                            {
                                <i class="fa fa-check fa-2x text-success" ></i>
                            }
                        </td>
                        <td>@articlecategory.CreateDate</td>
                        <td>
                            <a class="btn btn-warning float-left mr-3" asp-page="./Edit" asp-route-id="@articlecategory.Id">Rename</a>
                            @if (articlecategory.IsDeleted)
                            {
                                <form method="post" asp-page-handler="Activete" class="float-left">
                                    <button class="btn badge-success">Activete</button>
                                    <input type="hidden" name="Id" value="@articlecategory.Id"/>
                                </form>
                            }
                            else
                            {
                                <form method="post" asp-page-handler="Remove" class="float-left">
                                    <button class="btn badge-danger">Remove</button>
                                    <input type="hidden" name="Id" value="@articlecategory.Id"/>
                                </form>
                            }
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>